        <div class="codigo-ejemplo">
            <h4>Código jQuery utilizado:</h4>
            <pre>
// Aplicar clases
$('#cabeceraTabla').addClass('estilo-thead');
$('#cuerpoTabla').addClass('estilo-tbody');

// Remover clases
$('#cabeceraTabla').removeClass('estilo-thead');
$('#cuerpoTabla').removeClass('estilo-tbody');

// Alternar clases
$('#cabeceraTabla').toggleClass('estilo-thead');
$('#cuerpoTabla').toggleClass('estilo-tbody');
            </pre>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            // Función para actualizar el estado visual de las clases
            function actualizarEstadoClases() {
                const theadTieneClase = $('#cabeceraTabla').hasClass('estilo-thead');
                const tbodyTieneClase = $('#cuerpoTabla').hasClass('estilo-tbody');
                
                // Actualizar estado del thead
                if (theadTieneClase) {
                    $('#estadoThead').removeClass('clase-inactiva').addClass('clase-activa');
                    $('#estadoTheadTexto').text('Aplicada').css('color', '#155724');
                } else {
                    $('#estadoThead').removeClass('clase-activa').addClass('clase-inactiva');
                    $('#estadoTheadTexto').text('No aplicada').css('color', '#721c24');
                }
                
                // Actualizar estado del tbody
                if (tbodyTieneClase) {
                    $('#estadoTbody').removeClass('clase-inactiva').addClass('clase-activa');
                    $('#estadoTbodyTexto').text('Aplicada').css('color', '#155724');
                } else {
                    $('#estadoTbody').removeClass('clase-activa').addClass('clase-inactiva');
                    $('#estadoTbodyTexto').text('No aplicada').css('color', '#721c24');
                }
            }
            
            // Inicializar estado
            actualizarEstadoClases();
            
            // Botón para aplicar clases
            $('#btnAplicarClases').click(function() {
                $('#cabeceraTabla').addClass('estilo-thead');
                $('#cuerpoTabla').addClass('estilo-tbody');
                actualizarEstadoClases();
            });
            
            // Botón para remover clases
            $('#btnRemoverClases').click(function() {
                $('#cabeceraTabla').removeClass('estilo-thead');
                $('#cuerpoTabla').removeClass('estilo-tbody');
                actualizarEstadoClases();
            });
            
            // Botón para alternar clases
            $('#btnAlternarClases').click(function() {
                $('#cabeceraTabla').toggleClass('estilo-thead');
                $('#cuerpoTabla').toggleClass('estilo-tbody');
                actualizarEstadoClases();
            });
        });
    </script>
