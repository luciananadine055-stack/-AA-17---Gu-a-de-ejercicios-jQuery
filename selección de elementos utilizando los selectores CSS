    <script>
        $(document).ready(function() {
            // Seleccionar todas las filas de la primera tabla y agregar evento click
            $('.table1 tbody tr').click(function() {
                // Alternar la clase 'highlighted' en la fila clickeada
                $(this).toggleClass('highlighted');
            });
        });
