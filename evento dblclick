    <script>
        $(document).ready(function() {
            let esGrande = true;
            let contadorDblclick = 0;
            
            // Funci칩n para registrar eventos en el historial
            function registrarEvento(mensaje) {
                const timestamp = new Date().toLocaleTimeString();
                
                $('#listaEventos').prepend(
                    `<div class="evento-item evento-dblclick">[${timestamp}] ${mensaje}</div>`
                );
                
                // Actualizar 칰ltimo cambio
                $('#ultimoCambio').text(timestamp);
                
                // Limitar a 8 eventos en el historial
                if ($('#listaEventos .evento-item').length > 8) {
                    $('#listaEventos .evento-item:last').remove();
                }
            }
            
            // Evento dblclick para cambiar el tama침o
            $('#divInteractivo').dblclick(function() {
                // Aplicar efecto de transici칩n
                $(this).addClass('efecto-transicion');
                
                if (esGrande) {
                    // Cambiar a tama침o peque침o (250x250)
                    $(this)
                        .removeClass('div-grande')
                        .addClass('div-pequeno')
                        .css({
                            'width': '250px',
                            'height': '250px',
                            'background': 'linear-gradient(135deg, #fd79a8, #e84393)'
                        });
                    
                    // Actualizar informaci칩n
                    $('#infoTamano').text('250 칑 250 px');
                    $('#tamanoActual').text('Peque침o (250칑250)');
                    $('#anchoActual').text('250px');
                    $('#altoActual').text('250px');
                    $('#relacionAspecto').text('1:1');
                    $('#estadoActual').text('PEQUE칌O').css('color', '#e84393');
                    
                } else {
                    // Cambiar a tama침o grande (800x70)
                    $(this)
                        .removeClass('div-pequeno')
                        .addClass('div-grande')
                        .css({
                            'width': '800px',
                            'height': '70px',
                            'background': 'linear-gradient(135deg, #74b9ff, #0984e3)'
                        });
                    
                    // Actualizar informaci칩n
                    $('#infoTamano').text('800 칑 70 px');
                    $('#tamanoActual').text('Grande (800칑70)');
                    $('#anchoActual').text('800px');
                    $('#altoActual').text('70px');
                    $('#relacionAspecto').text('11.43:1');
                    $('#estadoActual').text('GRANDE').css('color', '#3498db');
                }
                
                // Alternar el estado
                esGrande = !esGrande;
                
                // Actualizar contador
                contadorDblclick++;
                $('#contadorDblclick').text(contadorDblclick);
                
                // Registrar evento
                const mensajeEvento = esGrande ? 'Cambi칩 a GRANDE (800칑70)' : 'Cambi칩 a PEQUE칌O (250칑250)';
                registrarEvento(mensajeEvento);
                
                // Remover efecto de transici칩n despu칠s de la animaci칩n
                setTimeout(() => {
                    $(this).removeClass('efecto-transicion');
                }, 800);
            });
            
            // Efecto hover mejorado
            $('#divInteractivo').hover(
                function() {
                    $(this).css('transform', 'translateY(-3px) scale(1.02)');
                },
                function() {
                    $(this).css('transform', 'translateY(0px) scale(1)');
                }
            );
            
            // Prevenir selecci칩n de texto en doble clic
            $('#divInteractivo').on('selectstart', function(e) {
                e.preventDefault();
                return false;
            });
        });
    </script>
