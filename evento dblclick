            <h4>游댢 C칩digo jQuery - Evento dblclick:</h4>
            <pre>
// Variable para controlar el estado del tama침o
let esGrande = true;

// Evento dblclick para cambiar el tama침o
$('#divInteractivo').dblclick(function() {
    if (esGrande) {
        // Cambiar a tama침o peque침o
        $(this)
            .removeClass('div-grande')
            .addClass('div-pequeno efecto-transicion');
        $('#infoTamano').text('250 칑 250 px');
        $('#tamanoActual').text('Peque침o (250칑250)');
        $('#anchoActual').text('250px');
        $('#altoActual').text('250px');
        $('#relacionAspecto').text('1:1');
        $('#estadoActual').text('PEQUE칌O');
    } else {
        // Cambiar a tama침o grande
        $(this)
            .removeClass('div-pequeno')
            .addClass('div-grande efecto-transicion');
        $('#infoTamano').text('800 칑 70 px');
        $('#tamanoActual').text('Grande (800칑70)');
        $('#anchoActual').text('800px');
        $('#altoActual').text('70px');
        $('#relacionAspecto').text('11.43:1');
        $('#estadoActual').text('GRANDE');
    }
    
    // Alternar el estado
    esGrande = !esGrande;
    
    // Actualizar contador y registrar evento
    contadorDblclick++;
    $('#contadorDblclick').text(contadorDblclick);
    registrarEvento(esGrande ? 'Cambi칩 a GRANDE' : 'Cambi칩 a PEQUE칌O');
});
            </pre>
