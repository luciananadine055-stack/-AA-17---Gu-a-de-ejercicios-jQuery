        <div class="codigo-ejemplo">
            <h4>ðŸ”§ CÃ³digo jQuery - MÃ©todos fadeIn() y fadeOut():</h4>
            <pre>
// Efecto fadeOut en el bloque principal
$('#bloquePrincipal').fadeOut(1000, function() {
    // Callback que se ejecuta CUANDO fadeOut se completa
    $('#estadoPrincipal').text('OCULTO');
    $('#opacidadPrincipal').text('0%');
    
    // Efecto fadeIn en el bloque secundario
    $('#bloqueSecundario').fadeIn(1000, function() {
        // Callback que se ejecuta CUANDO fadeIn se completa
        $('#estadoSecundario').text('VISIBLE');
        $('#opacidadSecundaria').text('100%');
    });
});

// Reiniciar efectos
function reiniciarEfectos() {
    $('#bloqueSecundario').stop().fadeOut(0);
    $('#bloquePrincipal').stop().fadeIn(0);
}

// Uso de fadeToggle (alternar)
$('#elemento').fadeToggle(1000); // Alterna entre fadeIn y fadeOut
            </pre>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            let contadorTransiciones = 0;
            let duracionFade = 1000;
            let animacionEnCurso = false;
            let velocidades = [
                {nombre: "RÃ¡pido", valor: 500},
                {nombre: "Normal", valor: 1000},
                {nombre: "Lento", valor: 2000},
                {nombre: "Muy Lento", valor: 3000}
            ];
            let velocidadIndex = 1;
            
            // FunciÃ³n para actualizar la barra de progreso
            function actualizarProgreso(elemento, porcentaje) {
                $(elemento).css('width', porcentaje + '%');
            }
            
            // FunciÃ³n para iniciar la animaciÃ³n fade
            function iniciarFade() {
                if (animacionEnCurso) return;
                
                animacionEnCurso = true;
                $('#estadoAnimacion').text('FADEOUT...');
                
                // Resetear barras de progreso
                actualizarProgreso('#progresoPrincipal', 0);
                actualizarProgreso('#progresoSecundario', 0);
                
                // Simular progreso durante fadeOut
                let progreso = 0;
                const intervalo = setInterval(() => {
                    progreso += (100 / (duracionFade / 50));
                    if (progreso >= 100) {
                        clearInterval(intervalo);
                        progreso = 100;
                    }
                    actualizarProgreso('#progresoPrincipal', progreso);
                    $('#opacidadPrincipal').text(Math.floor(100 - progreso) + '%');
                }, 50);
                
                // Efecto fadeOut en el bloque principal
                $('#bloquePrincipal').fadeOut(duracionFade, function() {
                    clearInterval(intervalo);
                    
                    $('#estadoPrincipal')
                        .text('OCULTO')
                        .removeClass('estado-activo')
                        .addClass('estado-inactivo');
                    
                    $('#estadoAnimacion').text('FADEIN...');
                    
                    // Simular progreso durante fadeIn
                    let progresoIn = 0;
                    const intervaloIn = setInterval(() => {
                        progresoIn += (100 / (duracionFade / 50));
                        if (progresoIn >= 100) {
                            clearInterval(intervaloIn);
                            progresoIn = 100;
                        }
                        actualizarProgreso('#progresoSecundario', progresoIn);
                        $('#opacidadSecundaria').text(Math.floor(progresoIn) + '%');
                    }, 50);
                    
                    // Efecto fadeIn en el bloque secundario
                    $('#bloqueSecundario').fadeIn(duracionFade, function() {
                        clearInterval(intervaloIn);
                        
                        $('#estadoSecundario')
                            .text('VISIBLE')
                            .removeClass('estado-inactivo')
                            .addClass('estado-activo');
                        
                        $('#estadoAnimacion').text('COMPLETADO');
                        contadorTransiciones++;
                        $('#contadorTransiciones').text(contadorTransiciones);
                        animacionEnCurso = false;
                    });
                });
            }
            
            // FunciÃ³n para reiniciar los efectos
            function reiniciarEfectos() {
                if (animacionEnCurso) {
                    $('#bloquePrincipal').stop(true, true);
                    $('#bloqueSecundario').stop(true, true);
                    animacionEnCurso = false;
                }
                
                // Resetear inmediatamente
                $('#bloqueSecundario').fadeOut(0);
                $('#bloquePrincipal').fadeIn(0);
                
                // Actualizar estados
                $('#estadoPrincipal')
                    .text('VISIBLE')
                    .removeClass('estado-inactivo')
                    .addClass('estado-activo');
                $('#estadoSecundario')
                    .text('OCULTO')
                    .removeClass('estado-activo')
                    .addClass('estado-inactivo');
                
                $('#opacidadPrincipal').text('100%');
                $('#opacidadSecundaria').text('0%');
                actualizarProgreso('#progresoPrincipal', 0);
                actualizarProgreso('#progresoSecundario', 0);
                $('#estadoAnimacion').text('REINICIADO');
            }
            
            // FunciÃ³n para alternar efectos
            function alternarEfectos() {
                if ($('#bloquePrincipal').is(':visible')) {
                    iniciarFade();
                } else {
                    // Efecto inverso: fadeOut secundario, fadeIn principal
                    $('#bloqueSecundario').fadeOut(duracionFade, function() {
                        $('#bloquePrincipal').fadeIn(duracionFade);
                    });
                }
            }
            
            // FunciÃ³n para cambiar velocidad
            function cambiarVelocidad() {
                velocidadIndex = (velocidadIndex + 1) % velocidades.length;
                const velocidad = velocidades[velocidadIndex];
                duracionFade = velocidad.valor;
                $('#duracionFade').text(duracionFade);
                $('#velocidadActual').text(velocidad.nombre);
            }
            
            // Eventos
            $('#bloquePrincipal').click(function() {
                iniciarFade();
            });
            
            $('#btnReiniciar').click(function() {
                reiniciarEfectos();
            });
            
            $('#btnAlternar').click(function() {
                alternarEfectos();
            });
            
            $('#btnCambiarVelocidad').click(function() {
                cambiarVelocidad();
            });
            
            // Efecto hover mejorado
            $('.bloque-principal, .bloque-secundario').hover(
                function() {
                    if (!animacionEnCurso && $(this).is(':visible')) {
                        $(this).css('transform', 'translateY(-5px) scale(1.02)');
                    }
                },
                function() {
                    $(this).css('transform', 'translateY(0px) scale(1)');
                }
            );
            
            // InicializaciÃ³n
            $('#estadoAnimacion').text('ESPERANDO');
            $('#duracionFade').text(duracionFade);
        });
    </script>
</body>
