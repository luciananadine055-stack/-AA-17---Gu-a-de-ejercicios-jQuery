    <script>
        $(document).ready(function() {
            // Contar elementos en head y body al cargar
            $('#headCount').text('Elementos: ' + $('head').children().length);
            $('#bodyCount').text('Elementos: ' + $('body').children().length);
            
            // Bot贸n para mostrar contenido del head
            $('#btnMostrarHead').click(function() {
                const contenidoHead = $('head').html();
                const lineas = contenidoHead.split('>').join('>\n');
                
                alert('CONTENIDO HTML DEL HEAD:\n\n' + lineas);
            });
            
            // Bot贸n para mostrar contenido del body
            $('#btnMostrarBody').click(function() {
                const contenidoBody = $('body').html();
                // Limitar la cantidad de texto para que quepa en el alert
                const contenidoRecortado = contenidoBody.substring(0, 2000) + 
                                         (contenidoBody.length > 2000 ? '\n\n... (contenido recortado)' : '');
                const lineas = contenidoRecortado.split('>').join('>\n');
                
                alert('CONTENIDO HTML DEL BODY (primeros 2000 caracteres):\n\n' + lineas);
            });
            
            // Bot贸n para modificar el 谩rea de demostraci贸n
            $('#btnModificarDemo').click(function() {
                const nuevoHTML = `
                    <div style="text-align: center; padding: 20px;">
                        <h3 style="color: #27ae60;">隆Contenido Modificado!</h3>
                        <p style="color: #7f8c8d;">Este contenido fue insertado usando <strong>html('nuevo contenido')</strong></p>
                        <div style="background: linear-gradient(135deg, #fd746c, #ff9068); color: white; padding: 15px; border-radius: 8px; margin: 10px 0;">
                            <strong>隆M茅todo html() en acci贸n!</strong>
                        </div>
                        <button onclick="restaurarDemo()" style="background: #3498db; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer;">
                            Restaurar Contenido Original
                        </button>
                    </div>
                `;
                
                $('#areaDemo').html(nuevoHTML);
            });
        });
        
        // Funci贸n para restaurar el contenido demo (llamada desde el bot贸n generado)
        function restaurarDemo() {
            $('#areaDemo').html(`
                <h3 class="demo-title">rea de Demostraci贸n</h3>
                <p>Este es un 谩rea de demostraci贸n que puede ser modificada usando <code>html('nuevo contenido')</code>.</p>
                <p>Haz clic en "Modificar rea Demo" para cambiar este contenido.</p>
                <p><strong>隆Contenido restaurado exitosamente!</strong></p>
            `);
        }
    </script>
