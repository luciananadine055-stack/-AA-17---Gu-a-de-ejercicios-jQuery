    <script>
        $(document).ready(function() {
            // Funci√≥n para actualizar estad√≠sticas
            function actualizarEstadisticas() {
                const total = $('strong').length;
                const ocultas = $('strong.palabra-oculta').length;
                const visibles = total - ocultas;
                
                $('#totalPalabras').text(total);
                $('#palabrasVisibles').text(visibles);
                $('#palabrasOcultas').text(ocultas);
            }
            
            // Inicializar estad√≠sticas
            actualizarEstadisticas();
            
            // Evento click para ocultar palabras strong
            $('strong').click(function() {
                // A√±adir clase para estilo de palabra oculta
                $(this).addClass('palabra-oculta');
                
                // Efecto de desvanecimiento
                $(this).fadeOut(300, function() {
                    actualizarEstadisticas();
                });
            });
            
            // Restaurar todas las palabras
            $('#btnRestaurar').click(function() {
                $('strong').each(function() {
                    $(this).removeClass('palabra-oculta').fadeIn(200);
                });
                actualizarEstadisticas();
            });
            
            // Ocultar todas las palabras
            $('#btnOcultarTodas').click(function() {
                $('strong').each(function() {
                    if (!$(this).hasClass('palabra-oculta')) {
                        $(this).addClass('palabra-oculta').fadeOut(300);
                    }
                });
                
                // Actualizar estad√≠sticas despu√©s de completar las animaciones
                setTimeout(actualizarEstadisticas, 350);
            });
            
            // Efecto hover adicional para mejor UX
            $('strong').hover(
                function() {
                    // Mouse entra
                    if (!$(this).hasClass('palabra-oculta')) {
                        $(this).css('transform', 'scale(1.05)');
                    }
                },
                function() {
                    // Mouse sale
                    $(this).css('transform', 'scale(1)');
                }
            );
        });
    </script>
