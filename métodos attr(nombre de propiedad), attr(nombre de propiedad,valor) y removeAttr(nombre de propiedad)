<body>
    <h1>Métodos attr() y removeAttr() en jQuery</h1>
    
    <div class="container">
        <div class="enlace-container">
            <h2>Hipervínculo Interactivo</h2>
            <a id="miEnlace" href="">Enlace sin destino</a>
        </div>
        
        <div class="botones-container">
            <button class="btn-enlace" id="btnGoogle">Google</button>
            <button class="btn-enlace" id="btnWikipedia">Wikipedia</button>
            <button class="btn-enlace" id="btnGitHub">GitHub</button>
            <button class="btn-remover" id="btnRemover">Remover Enlace</button>
        </div>
        
        <div class="info-panel">
            <p><strong>Estado actual:</strong> <span class="estado" id="estadoActual">Enlace deshabilitado (href vacío)</span></p>
            <p><strong>Atributo href actual:</strong> <code id="hrefActual">""</code></p>
            <p><strong>Texto actual:</strong> "<span id="textoActual">Enlace sin destino</span>"</p>
        </div>
        
        <div class="propiedades">
            <h3>Métodos jQuery utilizados:</h3>
            <ul>
                <li><code>attr('href')</code> - Obtener el valor del atributo href</li>
                <li><code>attr('href', valor)</code> - Establecer el valor del atributo href</li>
                <li><code>removeAttr('href')</code> - Remover el atributo href</li>
                <li><code>text('nuevo texto')</code> - Cambiar el texto del enlace</li>
            </ul>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            // Función para actualizar el panel de información
            function actualizarInfo() {
                const hrefActual = $('#miEnlace').attr('href');
                const textoActual = $('#miEnlace').text();
                
                $('#hrefActual').text('"' + (hrefActual || '') + '"');
                $('#textoActual').text(textoActual);
                
                if (!hrefActual) {
                    $('#estadoActual').text('Enlace deshabilitado (href vacío)').css('color', '#e74c3c');
                    $('#miEnlace').css('background-color', '#95a5a6');
                } else {
                    $('#estadoActual').text('Enlace activo').css('color', '#27ae60');
                    $('#miEnlace').css('background-color', '#3498db');
                }
            }
            
            // Inicializar información
            actualizarInfo();
            
            // Botón para enlace a Google
            $('#btnGoogle').click(function() {
                $('#miEnlace')
                    .attr('href', 'https://www.google.com')
                    .text('Ir a Google')
                    .attr('target', '_blank');
                actualizarInfo();
            });
            
            // Botón para enlace a Wikipedia
            $('#btnWikipedia').click(function() {
                $('#miEnlace')
                    .attr('href', 'https://www.wikipedia.org')
                    .text('Ir a Wikipedia')
                    .attr('target', '_blank');
                actualizarInfo();
            });
            
            // Botón para enlace a GitHub
            $('#btnGitHub').click(function() {
                $('#miEnlace')
                    .attr('href', 'https://www.github.com')
                    .text('Ir a GitHub')
                    .attr('target', '_blank');
                actualizarInfo();
            });
            
            // Botón para remover el atributo href
            $('#btnRemover').click(function() {
                $('#miEnlace')
                    .removeAttr('href')
                    .removeAttr('target')
                    .text('Enlace sin destino');
                actualizarInfo();
            });
            
            // Mostrar alerta cuando se hace clic en el enlace (solo si tiene href)
            $('#miEnlace').click(function(e) {
                const href = $(this).attr('href');
                if (!href) {
                    e.preventDefault();
                    alert('Este enlace no tiene destino asignado. Usa los botones para asignarle uno.');
                }
            });
        });
    </script>
</body>
