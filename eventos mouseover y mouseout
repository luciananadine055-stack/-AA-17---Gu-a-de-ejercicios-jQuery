            <h4> C贸digo jQuery utilizado:</h4>
            <pre>
// Evento mouseover - cuando el mouse entra en la celda
$('td').mouseover(function() {
    $(this).addClass('celda-hover');
    contadorOver++;
    $('#contadorOver').text(contadorOver);
    
    // Actualizar informaci贸n
    $('#celdaActiva').text($(this).attr('id'));
    $('#estadoCelda').text('Mouse DENTRO de la celda').css('color', '#27ae60');
    
    // Iniciar temporizador
    inicioTiempo = new Date();
});

// Evento mouseout - cuando el mouse sale de la celda
$('td').mouseout(function() {
    $(this).removeClass('celda-hover');
    contadorOut++;
    $('#contadorOut').text(contadorOut);
    
    // Actualizar informaci贸n
    $('#estadoCelda').text('Mouse FUERA de la celda').css('color', '#e74c3c');
    $('#celdaActiva').text('Ninguna');
    
    // Calcular tiempo transcurrido
    if (inicioTiempo) {
        const tiempoTranscurrido = (new Date() - inicioTiempo) / 1000;
        $('#tiempoCelda').text(tiempoTranscurrido.toFixed(1));
    }
});
            </pre>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            let contadorOver = 0;
            let contadorOut = 0;
            let inicioTiempo = null;
            let temporizador = null;
            
            // Evento mouseover - cuando el mouse entra en la celda
            $('td').mouseover(function() {
                // Aplicar clase de hover
                $(this).addClass('celda-hover');
                
                // Actualizar contadores
                contadorOver++;
                $('#contadorOver').text(contadorOver);
                
                // Actualizar informaci贸n en panel
                $('#celdaActiva').text($(this).attr('id'));
                $('#estadoCelda').text('Mouse DENTRO de la celda').css('color', '#27ae60');
                
                // Iniciar temporizador
                inicioTiempo = new Date();
                
                // Actualizar tiempo cada 100ms
                clearInterval(temporizador);
                temporizador = setInterval(function() {
                    if (inicioTiempo) {
                        const tiempoTranscurrido = (new Date() - inicioTiempo) / 1000;
                        $('#tiempoCelda').text(tiempoTranscurrido.toFixed(1));
                    }
                }, 100);
            });
            
            // Evento mouseout - cuando el mouse sale de la celda
            $('td').mouseout(function() {
                // Remover clase de hover
                $(this).removeClass('celda-hover');
                
                // Actualizar contadores
                contadorOut++;
                $('#contadorOut').text(contadorOut);
                
                // Actualizar informaci贸n en panel
                $('#estadoCelda').text('Mouse FUERA de la celda').css('color', '#e74c3c');
                $('#celdaActiva').text('Ninguna');
                
                // Calcular y mostrar tiempo final
                if (inicioTiempo) {
                    const tiempoTranscurrido = (new Date() - inicioTiempo) / 1000;
                    $('#tiempoCelda').text(tiempoTranscurrido.toFixed(1));
                    inicioTiempo = null;
                }
                
                // Detener temporizador
                clearInterval(temporizador);
            });
            
            // Efecto adicional para las celdas
            $('td').on({
                'mouseenter': function() {
                    // Efecto sutil de elevaci贸n
                    $(this).css('transform', 'scale(1.02)');
                },
                'mouseleave': function() {
                    // Restaurar transformaci贸n
                    $(this).css('transform', 'scale(1)');
                }
            });
        });
    </script>
