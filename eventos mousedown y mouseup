            <h4> C贸digo jQuery - Eventos mousedown y mouseup:</h4>
            <pre>
// Evento mousedown - cuando se presiona el bot贸n
$('#boton1').mousedown(function() {
    $(this).addClass('boton-presionado efecto-pulsacion');
    $('#estadoBoton1')
        .text('PRESIONADO')
        .removeClass('estado-inactivo')
        .addClass('estado-activo');
    
    // Actualizar contador
    contadorBoton1++;
    $('#contadorBoton1').text(contadorBoton1);
    
    // Registrar evento
    registrarEvento('Bot贸n 1 - MOUSEDOWN');
});

// Evento mouseup - cuando se suelta el bot贸n
$('#boton1').mouseup(function() {
    $(this).removeClass('boton-presionado');
    $('#estadoBoton1')
        .text('LIBRE')
        .removeClass('estado-activo')
        .addClass('estado-inactivo');
    
    // Registrar evento
    registrarEvento('Bot贸n 1 - MOUSEUP');
});

// Eventos equivalentes para el bot贸n 2
$('#boton2').mousedown(function() {
    $(this).addClass('boton-presionado efecto-pulsacion');
    $('#estadoBoton2').text('PRESIONADO').addClass('estado-activo').removeClass('estado-inactivo');
    contadorBoton2++;
    $('#contadorBoton2').text(contadorBoton2);
    registrarEvento('Bot贸n 2 - MOUSEDOWN');
});

$('#boton2').mouseup(function() {
    $(this).removeClass('boton-presionado');
    $('#estadoBoton2').text('LIBRE').addClass('estado-inactivo').removeClass('estado-activo');
    registrarEvento('Bot贸n 2 - MOUSEUP');
});
            </pre>
