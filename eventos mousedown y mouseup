    <script>
        $(document).ready(function() {
            let contadorBoton1 = 0;
            let contadorBoton2 = 0;
            let tiempoInicioPresion = null;
            let tiempoMaximoPresion = 0;
            
            // Funci贸n para registrar eventos en el historial
            function registrarEvento(mensaje) {
                const timestamp = new Date().toLocaleTimeString();
                const eventoClass = mensaje.includes('MOUSEDOWN') ? 'evento-mousedown' : 'evento-mouseup';
                
                $('#listaEventos').prepend(
                    `<div class="evento-item ${eventoClass}">[${timestamp}] ${mensaje}</div>`
                );
                
                // Limitar a 10 eventos en el historial
                if ($('#listaEventos .evento-item').length > 10) {
                    $('#listaEventos .evento-item:last').remove();
                }
            }
            
            // Eventos para el Bot贸n 1
            $('#boton1').mousedown(function() {
                // Aplicar clases de estilo presionado
                $(this).addClass('boton-presionado efecto-pulsacion');
                
                // Actualizar estado visual
                $('#estadoBoton1')
                    .text('PRESIONADO')
                    .removeClass('estado-inactivo')
                    .addClass('estado-activo');
                
                // Actualizar texto interno del bot贸n
                $(this).find('.estado-mini').text('Presionado').css('opacity', '1');
                
                // Actualizar contador
                contadorBoton1++;
                $('#contadorBoton1').text(contadorBoton1);
                
                // Iniciar temporizador de presi贸n
                tiempoInicioPresion = new Date();
                
                // Registrar evento
                registrarEvento('Bot贸n 1 - MOUSEDOWN');
            });
            
            $('#boton1').mouseup(function() {
                // Remover clases de estilo presionado
                $(this).removeClass('boton-presionado');
                
                // Actualizar estado visual
                $('#estadoBoton1')
                    .text('LIBRE')
                    .removeClass('estado-activo')
                    .addClass('estado-inactivo');
                
                // Actualizar texto interno del bot贸n
                $(this).find('.estado-mini').text('No presionado').css('opacity', '0.8');
                
                // Calcular tiempo de presi贸n
                if (tiempoInicioPresion) {
                    const tiempoPresion = (new Date() - tiempoInicioPresion) / 1000;
                    if (tiempoPresion > tiempoMaximoPresion) {
                        tiempoMaximoPresion = tiempoPresion;
                        $('#tiempoMaximo').text(tiempoMaximoPresion.toFixed(1));
                    }
                    tiempoInicioPresion = null;
                }
                
                // Registrar evento
                registrarEvento('Bot贸n 1 - MOUSEUP');
            });
            
            // Eventos para el Bot贸n 2
            $('#boton2').mousedown(function() {
                $(this).addClass('boton-presionado efecto-pulsacion');
                $('#estadoBoton2')
                    .text('PRESIONADO')
                    .removeClass('estado-inactivo')
                    .addClass('estado-activo');
                
                $(this).find('.estado-mini').text('Presionado').css('opacity', '1');
                
                contadorBoton2++;
                $('#contadorBoton2').text(contadorBoton2);
                
                tiempoInicioPresion = new Date();
                registrarEvento('Bot贸n 2 - MOUSEDOWN');
            });
            
            $('#boton2').mouseup(function() {
                $(this).removeClass('boton-presionado');
                $('#estadoBoton2')
                    .text('LIBRE')
                    .removeClass('estado-activo')
                    .addClass('estado-inactivo');
                
                $(this).find('.estado-mini').text('No presionado').css('opacity', '0.8');
                
                if (tiempoInicioPresion) {
                    const tiempoPresion = (new Date() - tiempoInicioPresion) / 1000;
                    if (tiempoPresion > tiempoMaximoPresion) {
                        tiempoMaximoPresion = tiempoPresion;
                        $('#tiempoMaximo').text(tiempoMaximoPresion.toFixed(1));
                    }
                    tiempoInicioPresion = null;
                }
                
                registrarEvento('Bot贸n 2 - MOUSEUP');
            });
            
            // Prevenir arrastre de botones
            $('.boton').on('dragstart', function(e) {
                e.preventDefault();
                return false;
            });
            
            // Inicializar estados
            $('#estadoBoton1').addClass('estado-inactivo');
            $('#estadoBoton2').addClass('estado-inactivo');
        });
    </script>
</body>
