// Ocultar el bloque principal lentamente
$('#bloquePrincipal').hide(1000, function() {
    // Esta funci√≥n se ejecuta CUANDO LA OCULTACI√ìN SE COMPLETA
    $('#estadoPrincipal').text('OCULTO').removeClass('estado-activo').addClass('estado-inactivo');
    $('#estadoSecundario').text('VISIBLE').removeClass('estado-inactivo').addClass('estado-activo');
    
    // Mostrar el bloque secundario lentamente
    $('#bloqueSecundario').show(1000, function() {
        // Esta funci√≥n se ejecuta CUANDO LA APARICI√ìN SE COMPLETA
        $('#estadoAnimacion').text('COMPLETADA');
        contadorAnimaciones++;
        $('#contadorAnimaciones').text(contadorAnimaciones);
    });
});

// Reiniciar la animaci√≥n
function reiniciarAnimacion() {
    // Ocultar bloque secundario r√°pidamente
    $('#bloqueSecundario').hide(0);
    $('#estadoSecundario').text('OCULTO').removeClass('estado-activo').addClass('estado-inactivo');
    
    // Mostrar bloque principal
    $('#bloquePrincipal').show(0);
    $('#estadoPrincipal').text('VISIBLE').removeClass('estado-inactivo').addClass('estado-activo');
    
    $('#estadoAnimacion').text('REINICIADO');
}
            </pre>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            let contadorAnimaciones = 0;
            let duracionAnimacion = 1000;
            let animacionEnCurso = false;
            
            // Funci√≥n para iniciar la animaci√≥n principal
            function iniciarAnimacion() {
                if (animacionEnCurso) return;
                
                animacionEnCurso = true;
                $('#estadoAnimacion').text('OCULTANDO...');
                
                // Ocultar el bloque principal lentamente
                $('#bloquePrincipal').hide(duracionAnimacion, function() {
                    // Esta funci√≥n se ejecuta CUANDO LA OCULTACI√ìN SE COMPLETA
                    $('#estadoPrincipal')
                        .text('OCULTO')
                        .removeClass('estado-activo')
                        .addClass('estado-inactivo');
                    
                    $('#estadoAnimacion').text('MOSTRANDO...');
                    
                    // Mostrar el bloque secundario lentamente
                    $('#bloqueSecundario').show(duracionAnimacion, function() {
                        // Esta funci√≥n se ejecuta CUANDO LA APARICI√ìN SE COMPLETA
                        $('#estadoSecundario')
                            .text('VISIBLE')
                            .removeClass('estado-inactivo')
                            .addClass('estado-activo');
                        
                        $('#estadoAnimacion').text('COMPLETADA');
                        contadorAnimaciones++;
                        $('#contadorAnimaciones').text(contadorAnimaciones);
                        animacionEnCurso = false;
                    });
                });
            }
            
            // Funci√≥n para reiniciar la animaci√≥n
            function reiniciarAnimacion() {
                if (animacionEnCurso) {
                    // Si hay animaci√≥n en curso, detenerla
                    $('#bloquePrincipal').stop(true, true);
                    $('#bloqueSecundario').stop(true, true);
                    animacionEnCurso = false;
                }
                
                // Ocultar bloque secundario inmediatamente
                $('#bloqueSecundario').hide(0);
                $('#estadoSecundario')
                    .text('OCULTO')
                    .removeClass('estado-activo')
                    .addClass('estado-inactivo');
                
                // Mostrar bloque principal inmediatamente
                $('#bloquePrincipal').show(0);
                $('#estadoPrincipal')
                    .text('VISIBLE')
                    .removeClass('estado-inactivo')
                    .addClass('estado-activo');
                
                $('#estadoAnimacion').text('REINICIADO');
            }
            
            // Funci√≥n para alternar manualmente
            function alternarManual() {
                if ($('#bloquePrincipal').is(':visible')) {
                    iniciarAnimacion();
                } else {
                    reiniciarAnimacion();
                }
            }
            
            // Evento click en el bloque principal
            $('#bloquePrincipal').click(function() {
                iniciarAnimacion();
            });
            
            // Evento click en el bot√≥n reiniciar
            $('#btnReiniciar').click(function() {
                reiniciarAnimacion();
            });
            
            // Evento click en el bot√≥n alternar
            $('#btnAlternar').click(function() {
                alternarManual();
            });
            
            // Control de velocidad de animaci√≥n
            $('#duracionAnimacion').click(function() {
                const nuevasDuraciones = [500, 1000, 1500, 2000];
                const indiceActual = nuevasDuraciones.indexOf(duracionAnimacion);
                const nuevoIndice = (indiceActual + 1) % nuevasDuraciones.length;
                duracionAnimacion = nuevasDuraciones[nuevoIndice];
                $(this).text(duracionAnimacion);
            });
            
            // Efecto hover mejorado
            $('.bloque-principal, .bloque-secundario').hover(
                function() {
                    if (!animacionEnCurso) {
                        $(this).css('transform', 'translateY(-5px)');
                    }
                },
                function() {
                    $(this).css('transform', 'translateY(0px)');
                }
            );
            
            // Inicializaci√≥n
            $('#estadoAnimacion').text('ESPERANDO');
        });
    </script>
