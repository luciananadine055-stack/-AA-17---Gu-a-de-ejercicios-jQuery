        <div class="codigo-ejemplo">
            <h4> C贸digo jQuery - M茅todo hover():</h4>
            <pre>
// Uso del m茅todo hover() con dos funciones
$('td').hover(
    function() {
        // Funci贸n que se ejecuta al ENTRAR el mouse (mouseenter)
        $(this).addClass('celda-hover');
        contadorEntradas++;
        $('#contadorEntradas').text(contadorEntradas);
        
        const celdaId = $(this).data('celda');
        $('#infoCelda').text('Celda ' + celdaId);
        $('#estadoHover').text('HOVER ACTIVO').css('color', '#27ae60');
        $('#celdaActivaNum').text(celdaId);
        
        inicioTiempo = new Date();
    },
    function() {
        // Funci贸n que se ejecuta al SALIR el mouse (mouseleave)
        $(this).removeClass('celda-hover');
        contadorSalidas++;
        $('#contadorSalidas').text(contadorSalidas);
        
        $('#estadoHover').text('HOVER INACTIVO').css('color', '#e74c3c');
        $('#infoCelda').text('Ninguna');
        $('#celdaActivaNum').text('-');
        
        if (inicioTiempo) {
            const tiempoTranscurrido = (new Date() - inicioTiempo) / 1000;
            $('#tiempoHover').text(tiempoTranscurrido.toFixed(1));
        }
    }
);
            </pre>
        </div>
        
        <div class="codigo-ejemplo" style="background-color: #34495e; margin-top: 15px;">
            <h4> Alternativas del m茅todo hover():</h4>
            <pre>
<strong>// Sintaxis 1: Con dos funciones (recomendada)</strong>
$('td').hover(
    function() { /* mouseenter */ },
    function() { /* mouseleave */ }
);

<strong>// Sintaxis 2: Con una funci贸n (se ejecuta en ambos eventos)</strong>
$('td').hover(function() {
    // Se ejecuta tanto al entrar como al salir
});

<strong>// Equivalente con m茅todos separados:</strong>
$('td')
    .mouseenter(function() { /* entrar */ })
    .mouseleave(function() { /* salir */ });
            </pre>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            let contadorEntradas = 0;
            let contadorSalidas = 0;
            let inicioTiempo = null;
            let temporizador = null;
            
            // M茅todo hover() de jQuery
            $('td').hover(
                // Funci贸n que se ejecuta al ENTRAR el mouse (mouseenter)
                function() {
                    // Aplicar clase de hover con efectos
                    $(this).addClass('celda-hover');
                    
                    // Actualizar contadores
                    contadorEntradas++;
                    $('#contadorEntradas').text(contadorEntradas);
                    
                    // Obtener informaci贸n de la celda
                    const celdaId = $(this).data('celda');
                    $('#infoCelda').text('Celda ' + celdaId);
                    $('#estadoHover').text('HOVER ACTIVO').css('color', '#27ae60');
                    $('#celdaActivaNum').text(celdaId);
                    
                    // Iniciar temporizador para medir tiempo
                    inicioTiempo = new Date();
                    
                    // Actualizar tiempo cada 100ms
                    clearInterval(temporizador);
                    temporizador = setInterval(function() {
                        if (inicioTiempo) {
                            const tiempoTranscurrido = (new Date() - inicioTiempo) / 1000;
                            $('#tiempoHover').text(tiempoTranscurrido.toFixed(1));
                        }
                    }, 100);
                },
                
                // Funci贸n que se ejecuta al SALIR el mouse (mouseleave)
                function() {
                    // Remover clase de hover
                    $(this).removeClass('celda-hover');
                    
                    // Actualizar contadores
                    contadorSalidas++;
                    $('#contadorSalidas').text(contadorSalidas);
                    
                    // Actualizar informaci贸n del estado
                    $('#estadoHover').text('HOVER INACTIVO').css('color', '#e74c3c');
                    $('#infoCelda').text('Ninguna');
                    $('#celdaActivaNum').text('-');
                    
                    // Calcular y mostrar tiempo final
                    if (inicioTiempo) {
                        const tiempoTranscurrido = (new Date() - inicioTiempo) / 1000;
                        $('#tiempoHover').text(tiempoTranscurrido.toFixed(1));
                        inicioTiempo = null;
                    }
                    
                    // Detener temporizador
                    clearInterval(temporizador);
                }
            );
            
            // Efecto adicional para mejorar la experiencia
            $('td').on('mouseenter mouseleave', function(e) {
                if (e.type === 'mouseenter') {
                    // Efecto sutil adicional al entrar
                    $(this).css('z-index', '10');
                } else {
                    // Restaurar al salir
                    $(this).css('z-index', '');
                }
            });
        });
    </script>
