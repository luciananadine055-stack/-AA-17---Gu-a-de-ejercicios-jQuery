            <h4>游댢 C칩digo jQuery - Evento mousemove:</h4>
            <pre>
// Evento mousemove dentro del 치rea
$('#areaMouse').mousemove(function(event) {
    // Obtener coordenadas relativas al div
    const offset = $(this).offset();
    const x = Math.floor(event.pageX - offset.left);
    const y = Math.floor(event.pageY - offset.top);
    
    // Actualizar coordenadas internas
    $('#coordsInternas').text(`X: ${x}, Y: ${y}`);
    
    // Actualizar panel principal
    $('#coordX').text(x);
    $('#coordY').text(y);
    
    // Mover punto de seguimiento
    $('#puntoSeguimiento').css({
        left: x + 'px',
        top: y + 'px'
    });
    
    // Actualizar contadores
    contadorMovimientos++;
    $('#contadorMovimientos').text(contadorMovimientos);
});

// Evento cuando el mouse entra al 치rea
$('#areaMouse').mouseenter(function() {
    $('#estadoCoordenadas')
        .text('Mouse DENTRO del 치rea - Coordenadas activas')
        .removeClass('estado-inactivo')
        .addClass('estado-activo');
});

// Evento cuando el mouse sale del 치rea
$('#areaMouse').mouseleave(function() {
    $('#estadoCoordenadas')
        .text('Mouse FUERA del 치rea')
        .removeClass('estado-activo')
        .addClass('estado-inactivo');
});
            </pre>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            let contadorMovimientos = 0;
            let tiempoInicio = null;
            let ultimaPosicion = null;
            let ultimoTiempo = null;
            
            // Evento mousemove dentro del 치rea
            $('#areaMouse').mousemove(function(event) {
                // Obtener coordenadas relativas al div
                const offset = $(this).offset();
                const x = Math.floor(event.pageX - offset.left);
                const y = Math.floor(event.pageY - offset.top);
                
                // Actualizar coordenadas en el 치rea
                $('#coordsInternas').text(`X: ${x}, Y: ${y}`);
                
                // Actualizar panel de informaci칩n principal
                $('#coordX').text(x);
                $('#coordY').text(y);
                
                // Mover punto de seguimiento visual
                $('#puntoSeguimiento').css({
                    left: x + 'px',
                    top: y + 'px'
                });
                
                // Calcular velocidad del mouse
                const ahora = new Date().getTime();
                if (ultimaPosicion && ultimoTiempo) {
                    const distancia = Math.sqrt(
                        Math.pow(x - ultimaPosicion.x, 2) + 
                        Math.pow(y - ultimaPosicion.y, 2)
                    );
                    const tiempoTranscurrido = (ahora - ultimoTiempo) / 1000;
                    
                    if (tiempoTranscurrido > 0) {
                        const velocidad = Math.floor(distancia / tiempoTranscurrido);
                        $('#velocidadMouse').text(velocidad);
                    }
                }
                
                // Actualizar para pr칩ximo c치lculo
                ultimaPosicion = { x: x, y: y };
                ultimoTiempo = ahora;
                
                // Incrementar contador de movimientos
                contadorMovimientos++;
                $('#contadorMovimientos').text(contadorMovimientos);
            });
            
            // Evento cuando el mouse entra al 치rea
            $('#areaMouse').mouseenter(function() {
                $('#estadoCoordenadas')
                    .text('Mouse DENTRO del 치rea - Coordenadas activas')
                    .removeClass('estado-inactivo')
                    .addClass('estado-activo');
                
                // Iniciar temporizador de tiempo activo
                tiempoInicio = new Date();
                
                // Actualizar tiempo activo cada segundo
                setInterval(function() {
                    if (tiempoInicio) {
                        const tiempoTranscurrido = Math.floor((new Date() - tiempoInicio) / 1000);
                        $('#tiempoActivo').text(tiempoTranscurrido);
                    }
                }, 1000);
            });
            
            // Evento cuando el mouse sale del 치rea
            $('#areaMouse').mouseleave(function() {
                $('#estadoCoordenadas')
                    .text('Mouse FUERA del 치rea')
                    .removeClass('estado-activo')
                    .addClass('estado-inactivo');
                
                // Reiniciar coordenadas
                $('#coordX').text('0');
                $('#coordY').text('0');
                $('#coordsInternas').text('X: 0, Y: 0');
                
                // Ocultar punto de seguimiento
                $('#puntoSeguimiento').css({ left: '-100px', top: '-100px' });
                
                // Reiniciar temporizador
                tiempoInicio = null;
                $('#tiempoActivo').text('0');
                $('#velocidadMouse').text('0');
            });
            
            // Inicializar estado
            $('#estadoCoordenadas').addClass('estado-inactivo');
        });
    </script>
